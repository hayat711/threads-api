// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id               String         @id @default(uuid()) @db.VarChar(36)
    createdAt        DateTime       @default(now())
    updatedAt        DateTime       @updatedAt
    username         String         @unique
    name             String?
    password         String
    bio              String?
    photo            String?
    verified         Boolean        @default(false)
    link             String?
    isPrivate        Boolean        @default(true)
    threads          Thread[]       @relation("ThreadAuthor")
    mentionedThreads Thread[]       @relation("ThreadMentionUser")
    replies          Reply[]        @relation("ReplyAuthor")
    likes            Like[]         @relation()
    followers        Follow[]       @relation("Followers")
    followings       Follow[]       @relation("Followings")
    notifications    Notification[]

    notificationsReceived Notification[] @relation("receiver")

    @@index([username], name: "username")
}

model Thread {
    id             String   @id @default(uuid()) @db.VarChar(36)
    createdAt      DateTime @default(now())
    updatedAt      DateTime @updatedAt
    content        String?
    quoteContent   String?
    author         User     @relation("ThreadAuthor", fields: [authorId], references: [id])
    authorId       String
    image          String?
    replies        Reply[]  @relation("ThreadReplies")
    repliesCount   Int      @default(0)
    likesCount     Int      @default(0)
    mention        Boolean? @default(false)
    mentionUser    User?    @relation("ThreadMentionUser", fields: [mentionUserId], references: [id])
    mentionUserId  String?
    likes          Like[]
    repostedFrom   Thread?  @relation("RepostedThread", fields: [repostedFromId], references: [id])
    repostedFromId String?
    reposts        Thread[] @relation("RepostedThread")
    repostsCount   Int      @default(0)

    @@index([authorId], name: "authorId")
}

model Reply {
    id           String   @id @default(uuid()) @db.VarChar(36)
    createdAt    DateTime @default(now())
    updatedAt    DateTime @updatedAt
    author       User     @relation("ReplyAuthor", fields: [authorId], references: [id])
    authorId     String
    content      String?
    image        String?
    likesCount   Int      @default(0)
    repliesCount Int      @default(0)
    thread       Thread   @relation("ThreadReplies", fields: [threadId], references: [id])
    mention      Boolean? @default(false)
    threadId     String
    likes        Like[]
    parentId     String?
    parent       Reply?   @relation("childReplies", fields: [parentId], references: [id])
    replies      Reply[]  @relation("childReplies")
}

model Like {
    id        String   @id @default(uuid()) @db.VarChar(36)
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
    userId    String
    thread    Thread?  @relation(fields: [threadId], references: [id], onDelete: Cascade)
    threadId  String?
    reply     Reply?   @relation(fields: [replyId], references: [id], onDelete: Cascade)
    replyId   String?

    @@unique([userId, threadId])
    @@unique([userId, replyId])
    @@index([userId], name: "userId_index")
}

model Follow {
    id        String   @id @default(uuid()) @db.VarChar(36)
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    follower    User   @relation("Followers", fields: [followerId], references: [id])
    followerId  String
    following   User   @relation("Followings", fields: [followingId], references: [id])
    followingId String

    isBlocked    Boolean @default(false)
    isRestricted Boolean @default(false)

    @@unique([followerId, followingId])
}

enum NotificationType {
    ALL
    POST
    REPLIES
    REQUESTS
    MENTIONS
    QUOTES
    REPOSTS
}

model Notification {
    id        String   @id @default(uuid()) @db.VarChar(36)
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    user        User             @relation(fields: [userId], references: [id], onDelete: Cascade, name: "receiver")
    userId      String
    isDismissed Boolean          @default(false)
    message     String
    isRead      Boolean          @default(false)
    type        NotificationType

    sender   User?   @relation(fields: [senderId], references: [id], onDelete: Cascade)
    senderId String?
}
